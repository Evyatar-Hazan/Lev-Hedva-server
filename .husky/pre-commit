#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸ” Running pre-commit checks..."

# Get staged TypeScript files
STAGED_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep -E '\.(ts|js)$')

if [ -n "$STAGED_FILES" ]; then
  echo "Running tests on changed files..."
  echo "$STAGED_FILES" | xargs npm run test:pre-commit
  
  # Check if tests passed
  if [ $? -ne 0 ]; then
    echo "âŒ Tests failed. Commit aborted."
    echo "ğŸ’¡ Fix the failing tests or use 'git commit --no-verify' to bypass (not recommended)"
    exit 1
  fi
else
  echo "No TypeScript files to test."
fi

# Run linting
echo "Running ESLint..."
npm run lint

if [ $? -ne 0 ]; then
  echo "âŒ Linting failed. Commit aborted."
  echo "ğŸ’¡ Fix lint errors or use 'git commit --no-verify' to bypass (not recommended)"
  exit 1
fi

echo "âœ… Pre-commit checks passed!"

