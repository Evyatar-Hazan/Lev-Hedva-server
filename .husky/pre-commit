#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸ” Running pre-commit checks..."

# Get staged TypeScript files (|| true prevents grep exit code 1 when no match)
STAGED_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep -E '\.(ts|js)$' || true)

if [ -n "$STAGED_FILES" ]; then
  echo "ğŸ’… Formatting code with Prettier..."
  npx prettier --write $STAGED_FILES
  git add $STAGED_FILES

  echo "Running tests on changed files..."
  npm run test:pre-commit -- $STAGED_FILES

  # Check if tests passed
  if [ $? -ne 0 ]; then
    echo "âŒ Tests failed. Commit aborted."
    echo "ğŸ’¡ Fix the failing tests or use 'git commit --no-verify' to bypass (not recommended)"
    exit 1
  fi
else
  echo "No TypeScript files to test."
fi

# Run linting
echo "Running ESLint..."
npm run lint

if [ $? -ne 0 ]; then
  echo "âŒ Linting failed. Commit aborted."
  echo "ğŸ’¡ Fix lint errors or use 'git commit --no-verify' to bypass (not recommended)"
  exit 1
fi

echo "âœ… Pre-commit checks passed!"

